<Window x:Class="Basics.View.Windows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Basics.View.Windows"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Введите логин" FontSize="18"/>
        <TextBox x:Name="tbLogin" FontSize="18"/>
        <TextBlock Text="Введите пароль" FontSize="18"/>
        <PasswordBox x:Name="tbPassword" FontSize="18"/>
        </StackPanel>
        <Button x:Name="btnSignIn"
            Grid.Row="1"
            Margin="5"
            Content="Войти"
            FontSize="18"
            Background="Aqua"
            FontFamily="Arial Black"
            Click="bthSignIn_Click"/>


    </Grid>
</Window>
